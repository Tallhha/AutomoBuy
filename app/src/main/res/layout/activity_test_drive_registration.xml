<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestDriveRegistration"
    android:background="#f8b451"
    android:weightSum="10"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/registeration"
            />



        <TextView
            android:id="@+id/currentPageTitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Test Drive Registeration Form"

            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"

            />


    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f57542"
        android:layout_weight="5"
        >

        <EditText
            android:id="@+id/fname"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorners"
            android:gravity="center|left"
            android:hint="First Name"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            />
        <EditText
            android:id="@+id/lname"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorners"
            android:gravity="center|left"
            android:hint="Last Name"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:id="@+id/email"
            android:layout_below="@id/fname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorners"
            android:gravity="center|left"
            android:hint="E-mail..."
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/cnic"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/email"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorners"
            android:gravity="center|left"
            android:hint="CNIC"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_below="@+id/cnic"
            android:hint="Phone No."
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/roundcorners"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundcorners"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="SUBMIT"
            android:textSize="25dp"
            />


        <EditText
            android:id="@+id/date"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@id/phone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorners"
            android:gravity="center|left"
            android:hint="Date (dd/mm/yyyy)"
            android:paddingLeft="10dp"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/outlet"
            android:layout_below="@id/phone"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorners"
            android:gravity="center|left"
            android:hint="Desired Outlet"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            />



        <EditText
            android:id="@+id/time"
            android:layout_below="@id/date"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorners"
            android:gravity="center|left"
            android:hint="Decided Time"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            />
        <EditText
            android:id="@+id/cars"
            android:layout_below="@id/date"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundcorners"
            android:gravity="center|left"
            android:hint="Cars"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/house"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"

            />
        <ImageView
            android:id="@+id/registeration"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/key"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search_icon"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            />

    </LinearLayout>



</LinearLayout>