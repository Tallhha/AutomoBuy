<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary" />
            <TextView
                android:id="@+id/sale_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="ID"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@+id/sale_id"
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="FirstName"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@nu.edu.pk"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/fname"
                />

            <TextView
                android:layout_below="@+id/sale_id"
                android:id="@+id/phone_no"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Phone No. 090078601"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/cnic"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_no"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:text="CNIC. 12345-1234567-1"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/email"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"

                android:layout_marginLeft="10dp"
                android:text="Puchased Car:"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"

                android:layout_marginLeft="10dp"
                android:text="Car Name"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_name"

                android:layout_marginLeft="10dp"
                android:text="Model"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_model"

                android:layout_marginLeft="10dp"
                android:text="cost"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buying_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_cost"

                android:layout_marginLeft="10dp"
                android:text="Buying Option"
                android:textColor="@color/black"
                android:textStyle="bold" />



        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>