<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="#f8b451"
    android:weightSum="10"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/forsale" />


        <TextView
            android:id="@+id/currentPageTitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"

            android:layout_marginEnd="6dp"

            android:layout_marginBottom="6dp"
            android:text="Search"
            android:textColor="@color/black"
            android:textSize="25dp" />


    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f57542"
        android:layout_weight="5"
        >

        <EditText
            android:id="@+id/search_text"
            android:hint="Search Automobiles"
            android:paddingLeft="40dp"
            android:textSize="15dp"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/roundcorners"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_text" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search_icon"
            android:layout_alignTop="@id/search_text"
            android:layout_alignBottom="@id/search_text"
            android:layout_alignLeft="@id/search_text"

            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/house"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"

            />
        <ImageView
            android:id="@+id/registeration"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/key"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search_icon"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            />

    </LinearLayout>



</LinearLayout>