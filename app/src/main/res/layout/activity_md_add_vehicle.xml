<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".M_D_Add_Vehicle"
    android:background="#f8b451"
    android:weightSum="10"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50dp"
            android:src="@drawable/ic_baseline_directions_car_24" />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/plus"
            app:tint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="50dp"
            />


        <TextView
            android:id="@+id/currentPageTitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"

            android:layout_marginEnd="6dp"

            android:layout_marginBottom="6dp"
            android:text="Add Vehicle"
            android:textColor="@color/black"
            android:textSize="25dp" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f57542"
        android:layout_weight="5"
        >

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_margin="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


        <EditText
            android:id="@+id/vehicle_name"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_below="@id/line"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="@color/white"
            android:gravity="center|left"
            android:hint="Vehicle Name"
            android:paddingLeft="20dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/vehicle_model"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_below="@id/line"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="@color/white"
            android:gravity="center|left"
            android:hint="Model.."
            android:paddingLeft="20dp"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/vehicle_type"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_below="@id/vehicle_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="@color/white"

            android:gravity="center|left"
            android:hint="Type"
            android:paddingLeft="20dp"
            android:textSize="15dp" />

        <EditText
            android:inputType="number"
            android:id="@+id/vehicle_cost"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_below="@id/vehicle_model"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="@color/white"
            android:gravity="center|left"
            android:hint="Cost"
            android:paddingLeft="20dp"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/vehicle_company"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/vehicle_type"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="@color/white"

            android:gravity="center|left"
            android:hint="Company"
            android:paddingLeft="20dp"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/add_vehicle_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundcorners"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Add Vehicle"
            android:textSize="25dp" />

    </RelativeLayout>




</LinearLayout>